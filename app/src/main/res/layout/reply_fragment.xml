<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_reply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReplyFragment">

    <ImageButton
        android:id="@+id/cnbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_baseline_close_24"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cnbutton"
        android:layout_above="@+id/btnTweet"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:textColorHint="#ff1da1f2"
        app:boxStrokeColor="#ff1da1f2"
        app:counterEnabled="true"
        app:counterMaxLength="140"
        app:counterTextColor="@color/logo_background"
        app:hintTextColor="#ff1da1f2">

        <ImageView
            android:id="@+id/ivprofile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="350dp"
            android:layout_marginTop="-400dp"
            android:layout_marginEnd="15dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="-50dp"
            android:layout_marginEnd="25dp"
            android:layout_toStartOf="@+id/ivprofile"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Mydleyka Dimanche" />

        <TextView
            android:id="@+id/tvSreenName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/tvName"
            android:layout_marginStart="250dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:layout_toStartOf="@+id/ivprofile"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="MydleykaDeb" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edReply"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Reply"
            android:inputType="textMultiLine"
            android:minLines="5" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnTweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="5dp"
        android:text="@string/tweet"
        android:textColor="@android:color/white" />

</RelativeLayout>