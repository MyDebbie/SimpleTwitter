<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_reply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReplyFragment">

    <ImageButton
        android:id="@+id/cnbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_baseline_close_24"/>


        <ImageView
            android:id="@+id/ivprofile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="90dp"
            android:layout_toStartOf="@+id/ivprofile"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Mydleyka Dimanche" />

        <TextView
            android:id="@+id/tvSreenName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="90dp"
            android:layout_toStartOf="@+id/ivprofile"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="MydleykaDeb" />

    <TextView
        android:id="@+id/txReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="85dp"
        android:drawablePadding="10dp"
        app:drawableLeftCompat="@drawable/ic_baseline_arrow_down"
        tools:text="@string/reply" />




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSreenName1"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="95dp"
        android:textColorHint="#ff1da1f2"
        app:boxStrokeColor="#ff1da1f2"
        app:counterEnabled="true"
        app:counterMaxLength="140"
        app:counterTextColor="@color/logo_background"
        app:hintTextColor="#ff1da1f2">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="245dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:minLines="5"
        tools:text="ScreanName" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnTweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="315dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#ff1da1f2"
        android:elevation="15dp"
        android:text="@string/tweet"
        android:textColor="@android:color/white" />

</RelativeLayout>